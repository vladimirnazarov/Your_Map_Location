<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="450dp"

        tools:context="com.ssrlab.yourmaplocation.MainActivity"
        android:name="com.google.android.gms.maps.SupportMapFragment"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/save_coordinates_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginHorizontal="32dp"

        android:text="Запісаць каардынаты"
        android:textAllCaps="false"

        app:layout_constraintTop_toBottomOf="@id/map"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/lat_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Шырыня"

        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/save_coordinates_button"/>

    <EditText
        android:id="@+id/lat_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="16dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lng_title"
        app:layout_constraintTop_toBottomOf="@id/save_coordinates_button" />

    <TextView
        android:id="@+id/lng_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="32dp"

        android:text="Даўжыня"

        app:layout_constraintEnd_toEndOf="@+id/lat_title"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/lat_title"
        app:layout_constraintTop_toBottomOf="@id/lat_title" />

    <EditText
        android:id="@+id/lng_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lng_title"
        app:layout_constraintTop_toBottomOf="@id/lat_title" />

    <TextView
        android:id="@+id/name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="32dp"

        android:text="Назва"

        app:layout_constraintEnd_toEndOf="@+id/lng_title"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/lng_title"
        app:layout_constraintTop_toBottomOf="@id/lng_title" />

    <EditText
        android:id="@+id/name_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lng_title"
        app:layout_constraintStart_toStartOf="@+id/lng_value"
        app:layout_constraintTop_toBottomOf="@id/lng_title" />

</androidx.constraintlayout.widget.ConstraintLayout>